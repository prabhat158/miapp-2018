<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contacts_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results"
        android:layout_gravity="center"
        android:padding="16dp"
        android:textSize="32dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:fontFamily="@font/without_sans_bold"
        android:layout_marginTop="20dp"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/type"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/rv_events"
        android:layout_marginTop="10dp">

</android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:id="@+id/messages"
            android:fontFamily="@font/without_sans_medium"
            android:textColor="#fff"
            android:text="No results posted yet. Stay tuned!"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="16sp"
        android:id="@+id/logincheck"
        android:fontFamily="@font/without_sans_medium"
        android:textColor="#fff"
        android:text="Please Login to access this feature"/>
    </RelativeLayout>
